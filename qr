    <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>

    <script>
        const textInput = document.getElementById('text-input');
        const qrcodeContainer = document.getElementById('qrcode');

        // QRCode.jsë¥¼ ì‚¬ìš©í•˜ì—¬ QR ì½”ë“œë¥¼ ìƒì„±í•˜ëŠ” í•¨ìˆ˜
        const generateQrCode = (text) => {
            // QR ì½”ë“œë¥¼ í‘œì‹œí•˜ê¸° ì „ì— ì´ì „ ì½”ë“œë¥¼ ì§€ì›ë‹ˆë‹¤.
            qrcodeContainer.innerHTML = '';

            // í…ìŠ¤íŠ¸ê°€ ë¹„ì–´ìˆì§€ ì•Šì€ ê²½ìš°ì—ë§Œ QR ì½”ë“œë¥¼ ìƒì„±í•©ë‹ˆë‹¤.
            if (text.trim() !== '') {
                new QRCode(qrcodeContainer, {
                    text: text,
                    width: 256,
                    height: 256,
                    colorDark : "#000000",
                    colorLight : "#ffffff",
                    correctLevel : QRCode.CorrectLevel.H
                });
            }
        };

        // í˜ì´ì§€ê°€ ì²˜ìŒ ë¡œë“œë  ë•Œ í”Œë ˆì´ìŠ¤í™€ë” í…ìŠ¤íŠ¸ë¡œ QR ì½”ë“œ ìƒì„±
        generateQrCode(textInput.placeholder);

        // ì‚¬ìš©ìê°€ í…ìŠ¤íŠ¸ë¥¼ ì…ë ¥í•  ë•Œë§ˆë‹¤ ì‹¤ì‹œê°„ìœ¼ë¡œ QR ì½”ë“œ ì—…ë°ì´íŠ¸
        textInput.addEventListener('input', () => {
            generateQrCode(textInput.value);
        });
    </script>

